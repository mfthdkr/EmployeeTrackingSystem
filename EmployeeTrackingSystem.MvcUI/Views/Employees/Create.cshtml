@model EmployeeCreateDto
@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class=col-md-6>
        <form asp-action="Create" method="post" asp-controller="Employees">
            <input type="hidden" asp-for="DepartmentId" />
            <div class="form-group">
                <label asp-for="Name">Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname">Soyadı</label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="PositionId">Posisyonu</label>
                <select asp-for="PositionId" asp-items="ViewBag.Positions" class="form-control">
                    <option value="0">-Lütfen bir görev seçin-</option>
                </select>
            </div>
            <br /><br />

            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn-primary" />
            </div>
        </form>
    </div>
</div>