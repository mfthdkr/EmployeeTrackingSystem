@model List<AddressDto>

<p style="text-align:center">Adres Listesi</p>

<a class="btn btn-outline-primary" asp-controller="Addresses" asp-action="Create" asp-route-employeeId="@ViewBag.EmployeeId">Adres Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <td>Sıra</td>
            <td>Id</td>
            <td>Şehir</td>
            <td>Açık Adres</td>
            <td>Aksiyonlar</td>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@item.Id</td>
                <td>@item.City</td>
                <td>@item.FullAddress</td>
               <td>
                    <a class="btn btn-outline-warning" asp-controller="Addresses" asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                    <a class="btn btn-outline-danger" asp-controller="Addresses" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
               </td>
            </tr>
        }
    </tbody>
</table>
<hr />

